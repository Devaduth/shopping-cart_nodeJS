<section>
  <div class="container">
    <table class="table col-12 mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">User Name</th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.user.Name}}</td>
          <td>{{this.user.Email}}</td>
          <td>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger mt-2" onclick="return confirm('Are you sure to Delete {{this.user.Name}} ?')">Remove User</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>