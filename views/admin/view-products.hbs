<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
    <table class="table col-12 mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width: 50px; height:50px;" src="/product_images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product/" class="btn btn-primary mt-2">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger mt-2 " onclick="return confirm('Are you sure to Delete {{this.Name}} ?')">delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>